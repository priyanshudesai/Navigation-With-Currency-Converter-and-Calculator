<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alarm.AlarmFragment">

    <TextView
        android:id="@+id/tv_date_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:textSize="22sp"
        android:fontFamily="@font/black_ops_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_setDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Set Alarm Date"
        android:textColor="?attr/textColor"
        app:backgroundTint="?attr/btnColor"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_date_preview"
        app:layout_constraintTop_toTopOf="@+id/tv_date_preview" />

    <TextView
        android:id="@+id/tv_time_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/black_ops_one"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_preview" />

    <Button
        android:id="@+id/btn_setTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Set Alarm Time"
        android:textColor="?attr/textColor"
        app:backgroundTint="?attr/btnColor"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_time_preview"
        app:layout_constraintTop_toTopOf="@+id/tv_time_preview" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/black_ops_one"
        android:hint="Enter Description"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="?android:textColorPrimary"
        android:backgroundTint="?android:textColorPrimary"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_setTime"
        app:layout_constraintStart_toStartOf="@+id/tv_time_preview"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_preview" />

    <Button
        android:id="@+id/btn_saveAlarm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Alarm"
        android:fontFamily="@font/black_ops_one"
        android:textSize="22sp"
        android:textColor="?attr/textColor"
        app:backgroundTint="?attr/btnColor"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/et_description"
        app:layout_constraintStart_toStartOf="@+id/et_description"
        app:layout_constraintTop_toBottomOf="@+id/et_description" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_alarmFrag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_saveAlarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_saveAlarm"
        tools:listitem="@layout/layout_alarm_list" />

</androidx.constraintlayout.widget.ConstraintLayout>
