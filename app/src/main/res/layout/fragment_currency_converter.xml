    <androidx.cardview.widget.CardView
        android:id="@+id/cv_card_currencyConverter_USD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_ripple_effect"
        android:backgroundTint="?attr/cardBgColor"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/iv_flagImg_currencyConverter_USD"
                android:layout_width="123dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/whiteColor"
                android:src="@drawable/ic_usd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_countryName_currencyConverter_USD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/black_ops_one"
                android:singleLine="false"
                android:text="USD"
                android:textColor="?attr/colorSecondary"
                android:textSize="16sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_flagImg_currencyConverter_USD"
                app:layout_constraintEnd_toStartOf="@+id/view2_USD"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_flagImg_currencyConverter_USD"
                app:layout_constraintTop_toTopOf="@+id/iv_flagImg_currencyConverter_USD"
                app:layout_constraintVertical_bias="0.16000003" />

            <View
                android:id="@+id/view2_USD"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_flagImg_currencyConverter_USD"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_currencyName_currencyConverter_USD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/black_ops_one"
                android:text="@string/us_dollar"
                android:textSize="12sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_countryName_currencyConverter_USD"
                app:layout_constraintTop_toBottomOf="@+id/tv_countryName_currencyConverter_USD" />

            <TextView
                android:id="@+id/tv_price_currencyConverter_USD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/black_ops_one"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="0.0"
                android:textColor="?attr/colorSecondary"
                android:textSize="14sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_flagImg_currencyConverter_USD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_countryName_currencyConverter_USD"
                app:layout_constraintTop_toTopOf="@+id/iv_flagImg_currencyConverter_USD" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

