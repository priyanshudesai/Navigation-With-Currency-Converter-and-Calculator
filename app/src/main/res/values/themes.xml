<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyConverter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/whiteColor</item>
        <item name="colorPrimaryVariant">@color/whiteColor</item>
        <item name="colorOnPrimary">@color/whiteColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blackColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CurrencyConverter.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/whiteColor</item>

        <item name="colorAccent">@color/purple_500</item>

        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/blackColor</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

<!--        <item name="android:textColor">@color/blackColor</item>-->
        <item name="android:textColorPrimary">@color/blackColor</item>
        <item name="android:textColorSecondary">@color/blackColor</item>
        <item name="android:textColorTertiary">@color/blackColor</item>

        <item name="textColor">@color/whiteColor</item>
        <item name="btnColor">?attr/colorPrimary</item>
        <item name="bgColor">@color/whiteColor</item>

        <item name="cardBgColor">@color/greyColor</item>

        <item name="textBgColor">@color/purple_200</item>
        <item name="textBgColorG">@color/purple_500</item>

        <item name="txtNormalColor">@color/blackColor</item>
        <item name="btnBgNormalColor">@color/greyColor</item>
        <item name="btnBgEqualColor">@color/greenColor</item>
        <item name="bgImage">@drawable/card_img_background</item>

        <item name="appBarColor">@color/redColor</item>

        <item name="alertDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="Theme.CurrencyConverter.NoActionBar.Dark">
        <item name="colorPrimary">@color/lightBlackColor</item>
        <item name="colorPrimaryVariant">#171717</item>
        <item name="colorOnPrimary">@color/teal_200</item>

        <item name="colorAccent">@color/whiteColor</item>

        <item name="colorSecondary">@color/whiteColor</item>
        <item name="colorSecondaryVariant">@color/whiteColor</item>
        <item name="colorOnSecondary">@color/teal_200</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

<!--        <item name="android:textColor">@color/whiteColor</item>-->
        <item name="android:textColorPrimary">@color/whiteColor</item>
        <item name="android:textColorSecondary">@color/whiteColor</item>
        <item name="android:textColorTertiary">@color/whiteColor</item>

        <item name="textColor">@color/whiteColor</item>
        <item name="btnColor">?attr/colorPrimaryVariant</item>
        <item name="bgColor">@color/lightBlackColor</item>

        <item name="cardBgColor">@color/lightBlack</item>

        <item name="textBgColor">@color/lightBlackColor</item>
        <item name="textBgColorG">@color/darkBlack</item>

        <item name="txtNormalColor">@color/whiteColor</item>
        <item name="btnBgNormalColor">@color/blackColor</item>
        <item name="btnBgEqualColor">@color/greenColor</item>
        <item name="bgImage">@drawable/card_img_background_dark</item>

        <item name="appBarColor">@color/redColor</item>

        <item name="alertDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="Theme.CurrencyConverter.NoActionBar.Christmas">

        <item name="colorPrimary">@color/redColor</item>
        <item name="colorPrimaryVariant">#92D840</item>
        <item name="colorOnPrimary">@color/yellowColor</item>

        <item name="colorAccent">@color/greenColor</item>

        <item name="colorSecondary">@color/greenColor</item>
        <item name="colorSecondaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/blackColor</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

<!--        <item name="android:textColor">@color/blackColor</item>-->
        <item name="android:textColorPrimary">@color/blackColor</item>
        <item name="android:textColorSecondary">@color/blackColor</item>
        <item name="android:textColorTertiary">@color/blackColor</item>

        <item name="textColor">@color/whiteColor</item>
        <item name="btnColor">?attr/colorSecondary</item>
        <item name="bgColor">@color/whiteColor</item>

        <item name="cardBgColor">@color/greyColor</item>

        <item name="textBgColor">@color/lightGreen</item>
        <item name="textBgColorG">@color/darkGreen</item>

        <item name="txtNormalColor">@color/whiteColor</item>
        <item name="btnBgNormalColor">@color/greenColor</item>
        <item name="btnBgEqualColor">@color/redColor</item>
        <item name="bgImage">@drawable/card_img_background_christmas</item>

        <item name="appBarColor">@color/redColor</item>

        <item name="alertDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/blackColor</item>
        <item name="colorAccent">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CurrencyConverter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CurrencyConverter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>